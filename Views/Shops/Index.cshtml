@model IEnumerable<PosterShop.Shops>

@{
    ViewData["Title"] = "Наши магазины";
}
<link href="https://fonts.googleapis.com/css?family=Pangolin&display=swap" rel="stylesheet">
<style>
    body {
        background-color: #f7f7f7;
    }

    .block {
        background-color: white;
        width: 350px;
        /*display: flex;*/
        margin: 10px;
        text-align: center;
        border: 2px solid lightgrey;
        border-bottom: 6px solid lightgrey;
        border-radius: 5%;
        margin-bottom: 13px;
    }

    .three {
        display: flex;
        flex-wrap: wrap;
    }

    .poster {
        width: 320px;
        margin-top: 20px;
        border-radius: 9px;
    }

    .price {
        font-family: 'Pangolin', cursive;
        font-size: 40px;
    }

    .buttons {
        width: 31px;
        margin: 7px;
        margin-top: 15px;
        margin-bottom: 15px;
    }

    h1 {
        font-family: 'Pangolin', cursive;
        text-align: center;
        margin-top: 0px;
        margin-bottom: 0px;
        font-size: 50px;
    }
</style>
<body>
    <a asp-controller="Topics" asp-action="Index" style="font-family: 'Pangolin', cursive; font-size: 1.2vw; color: darkblue">Назад на главную</a>
    <h1>Наши магазины</h1>

    <p>
        <a asp-action="Create" style="font-family: 'Pangolin', cursive; font-size: 1.2vw">Добавить магазин</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Адрес
                </th>
                <th>
                    График работы
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Worktime)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Инфо</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>